# Development Environment Variables
# Copy this file to .env.development and modify as needed

# Database Configuration
POSTGRES_DB=devicems
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Application Configuration
ENVIRONMENT=development
PORT=8000
JWT_SECRET=dev-secret-key-change-in-production

# SMTP Configuration for Email (optional for development)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Security Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://127.0.0.1:3000", "http://127.0.0.1:8000"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# Database URL (for direct connection)
DATABASE_URL=postgresql://postgres:password@localhost:5432/devicems
