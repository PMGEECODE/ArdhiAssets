# Database Configuration
POSTGRES_URL=postgresql://username:password@localhost:5432/devicems
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/devicems

# Server Configuration
PORT=3001
ENVIRONMENT=development

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900

# Default Admin User
DEFAULT_ADMIN_EMAIL=admin@devicems.local
DEFAULT_ADMIN_PASSWORD=admin123

# Session Configuration
DEFAULT_SESSION_TIMEOUT=30
DEFAULT_PASSWORD_EXPIRATION_DAYS=90
MAX_LOGIN_ATTEMPTS=3
LOGIN_LOCKOUT_MINUTES=15
TWO_FACTOR_CODE_EXPIRATION_MINUTES=10
